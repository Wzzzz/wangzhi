//简单题 遍历一下 考虑可能出现几种情况判断计数值n怎么变化即可
public class Solution {
    public int lengthOfLastWord(String s) {
        if(s.length()==0)
         return 0;
        int n = 0; 
        if(s.charAt(0)==' ')
          n = 0;
        else n = 1; 
        for(int i = 1;i<s.length();i++)
         { 
          if(s.charAt(i-1)==' '&&s.charAt(i)!=' ')
            n = 1; 
          else if(s.charAt(i-1)!=' '&&s.charAt(i)!=' ')
            n++;
         }  
        return n; 
    }
}
